{
   "server": {
     "sleep": 0
   },
   "plugins" : [ "org_opengoggles_bundled_Multiserver" ],
   "routes" : [
      {
         "destination" : "/me/hands/left",
         "source" : {
            "changeBasis" : {
               "x" : "x",
